<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="view_model"
            type="com.mredrock.cyxbs.shop.pages.stampcenter.viewmodel.ShopViewModel" />
        <variable
            name="position"
            type="Integer" />
        <variable
            name="type"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shop_item_task_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:text="@{view_model.getTaskData(type,position).title}"
            android:textColor="#15315B"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/shop_item_task_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:text='@{view_model.getTaskData(type,position).desc + "   +" + view_model.getTaskData(type,position).gainStamp}'
            android:textColor="#6615315B"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_item_task_tv_title" />

        <TextView
            android:id="@+id/shop_item_task_tv_go"
            android:layout_width="66dp"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/shop_bg_recycle_item_btn_go_unfinished"
            android:gravity="center"
            android:text="去完成"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/shop_item_task_progressbar"
            android:layout_width="150dp"
            android:layout_height="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="9dp"
            app:indicatorColor="#7D8AFF"
            app:trackColor="#E5E5E5"
            android:interpolator="@android:anim/decelerate_interpolator"
            android:progress="@{view_model.getTaskData(type,position).curProgress}"
            android:max="@{view_model.getTaskData(type,position).maxProgress}"
            app:trackThickness="8dp"
            app:trackCornerRadius="18dp"
            app:showAnimationBehavior="outward"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_item_task_tv_desc" />

        <TextView
            android:id="@+id/shop_item_task_tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginStart="5dp"
            android:textSize="12sp"
            android:textColor="#7D8AFF"
            android:gravity="center"
            android:text='@{view_model.getTaskData(type,position).curProgress + "/" + view_model.getTaskData(type,position).maxProgress}'
            app:layout_constraintBottom_toBottomOf="@+id/shop_item_task_progressbar"
            app:layout_constraintStart_toEndOf="@+id/shop_item_task_progressbar"
            app:layout_constraintTop_toTopOf="@+id/shop_item_task_progressbar" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>