<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/shop_imageview"
        android:layout_width="167dp"
        android:layout_height="145dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/shop_textview"
        android:layout_width="143dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/shop_imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_imageview" />

    <TextView
        android:id="@+id/shop_textview2"
        android:layout_width="47dp"
        android:layout_height="15dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/shop_textview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/shop_textview"
        app:layout_constraintTop_toBottomOf="@+id/shop_textview" />

    <ImageView
        android:id="@+id/shop_imageview2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/shop_ic_stamp"
        app:layout_constraintEnd_toEndOf="@+id/shop_textview2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/shop_textview2"
        app:layout_constraintTop_toBottomOf="@+id/shop_textview2"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/shop_textview3"
        android:layout_width="23dp"
        android:layout_height="17dp"
        android:layout_marginStart="4dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/shop_imageview2"
        app:layout_constraintEnd_toEndOf="@+id/shop_textview2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/shop_imageview2"
        app:layout_constraintTop_toTopOf="@+id/shop_imageview2" />

    <TextView
        android:id="@+id/shop_button"
        android:layout_width="48dp"
        android:layout_height="26dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/shop_shape_btn_obtain"
        android:text="兑换"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/shop_textview3"
        app:layout_constraintEnd_toEndOf="@+id/shop_imageview"
        app:layout_constraintStart_toEndOf="@+id/shop_textview3"
        app:layout_constraintTop_toBottomOf="@+id/shop_textview" />
</androidx.constraintlayout.widget.ConstraintLayout>