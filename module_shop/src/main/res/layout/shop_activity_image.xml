<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_image_fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shop_black">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/shop_image_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:transitionName="shop_detail_trans_name_vp_pic"/>

    <TextView
        android:id="@+id/shop_image_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="50dp"
        android:textColor="@color/shop_white"
        android:textSize="20sp" />
</FrameLayout>